package test.mypac;

// 상품 하나의 정보를 담을 객체를 생성할 클래스 정의하기
public class Product {
	// 외부에서 필드를 직접 참조하지 못하도록 접근 지정자를 private 으로 지정
	// product 객체 내부에서만 참조 가능
	private int id;
	private String name;
	private int price;  // 필드가 public 인 공개된 필드를 잘 사용하지 않는다.
	
	public Product() {}
	
	public Product(int id, String name, int price) {
		this.id = id;
		this.name = name;
		this.price = price;
	}	
}