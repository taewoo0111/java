package test.main;

import java.util.Scanner;

public class MainClass03 {
	public static void main(String[] args) {
		// 1. String type 을 담을 수 있는 3칸 배열 객체를 만들고 참조값을 names에 담기
		String[] names = new String[3];
		
		// 2. 콘솔 창으로 부터 문자열을 입력받을 수 있는 Scanner 객체를 생성해서 참조값을 scan에 담기
		Scanner scan = new Scanner(System.in);
		
		// 3. 반복문을 돌면서 Scanner 객체를 이용해서 이름을 입력 받고 입력받은 이름을 배열에 순서대로 저장
		for (int i=0; i<names.length; i++) {
			System.out.print("이름을 입력하세요: ");
			String name = scan.nextLine();
			names[i] = name;
		}
		// 4. 반복문을 돌면서 배열에 저장된 이름을 순서대로 콘솔창에 출력
		System.out.println();
		for (int a=0; a<names.length; a++) {
			System.out.println(names[a]);
		}
	}
}
