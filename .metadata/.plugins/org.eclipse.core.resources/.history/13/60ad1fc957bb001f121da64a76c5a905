package test.mypac;

public class Member {
	public int num;
	public String name;
	public String addr;
	
	// 기본 생성자
	public Member() {
		
	}
	
	// 값을 3개 전달받는 생성자(Constructor)
	public Member(int num, String name, String addr) {
		// 매개 변수에 전달되는 값을 필드에 저장하기
		this.num = num;
		this.name = name;
		this.addr = addr;
	}
	
	// 필드에 저장된 정보를 콘솔창에 출력하는 method
	public void showInfo() {
		// 필드에 저장된 회원 정보를 1줄로 이쁘게 출력하는 코드 작성하기
		String info = "번호:"+num + "이름:"+name + "주소:"+addr;
		System.out.println(info);
	}
}
